<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="BorderBrush" Value="#FF009ACE" />
        <Setter Property="Foreground" Value="#FFFDF9F9" />
        <Setter Property="Background" Value="Gray" />
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Height" Value="70"/>
        <Setter Property="Margin" Value="40 0 0 0" />
        <Setter Property="Padding" Value="25 0 25 0" />
        <Setter Property="RenderTransformOrigin" Value="0.49,5.991"/>
    </Style>
    <Style x:Key="BlueButtonStyle" TargetType="Button">
        <Setter Property="BorderBrush" Value="#FF009ACE" />
        <Setter Property="Foreground" Value="#FFFDF9F9" />
        <Setter Property="Background" Value="#FF009ACE" />
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="RenderTransformOrigin" Value="0.49,5.991"/>
    </Style>
</ResourceDictionary>