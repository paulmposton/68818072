@model Bettery.WebRole.Models.AddPromoModel
@{
    ViewBag.Title = "Add Promotional Code";
}
<p>&nbsp;</p>
<div class="main">

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add Promo Code</legend>
        <div style="color: Red">
            @Html.DisplayTextFor(model => model.Message)
        </div>
        <div class="editor-label">
            PROMO CODE
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PromoCode)
            @Html.ValidationMessageFor(model => model.PromoCode)
        </div>

        <div class="editor-label">
            PROMO AMOUNT
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PromoAmount)
            @Html.ValidationMessageFor(model => model.PromoAmount)
        </div>

        <div class="editor-label">
            PROMO TYPE
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.PromoTypes,
             new SelectList(MvcWebRole1.Common.Enum<Bettery.WebRole.Models.PromoTypes>.GetValueDisplayNameCollection(), "Item1", "Item2"))
            @Html.ValidationMessageFor(m => m.PromoTypes)
        </div>

        <div class="editor-field">
            MULTIPLE USE @Html.CheckBoxFor(model => model.MultipleUse)
            @Html.ValidationMessageFor(model => model.MultipleUse)
        </div>

        <div class="editor-label">
            EXPIRATION DATE
        </div>
        <div class="editor-field">
        @Html.EditorFor(model => model.ExpireDate)
        @Html.ValidationMessageFor(model => model.ExpireDate)   

        </div>

        <div class="editor-label">
            Notes
        </div>
        <div class="editor-field">
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)   

        </div>
        <p>
            
            @Html.ValidationSummary(true)

            <input type="submit" name="Command" value="ADD" />&nbsp;&nbsp;<input type="submit" name="Command" value="CANCEL" />
        </p>
    </fieldset>
}

</div>
