@model Bettery.WebRole.Models.CreditCard

@{
    ViewBag.Title = "CreditCard";
}
        <div class="tabs">

             <ul> 
                <li>@Html.ActionLink("MY ACCOUNT", "Details", "Account")
	            <li>@Html.ActionLink("EDIT ACCOUNT", "Edit", "Account")
                <li>@Html.ActionLink("PURCHASES", "Transactions", "Account")
	            <li id="selected">@Html.ActionLink("CREDIT CARD", "CreditCard", "Account")
             </ul>

        </div>

<p>&nbsp;</p>
<div class="main">


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Credit Card</legend>


        <div class="editor-label">
            CREDIT CARD NUMBER
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CCNumber)
            @Html.ValidationMessageFor(model => model.CCNumber)
        </div>

        <div class="editor-label">
            EXPIRE DATE
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CCExpireDate)
            @Html.ValidationMessageFor(model => model.CCExpireDate)
        </div>

        <div class="editor-label">
            ZIPCODE
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Zipcode)
            @Html.ValidationMessageFor(model => model.Zipcode)
        </div>

        <div class="editor-label">
            FIRST NAME ON CARD
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>

        <div class="editor-label">
            LAST NAME ON CARD
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>


        <p>
            <input type="submit" value="CREATE" />
        </p>
    </fieldset>
}

</div>