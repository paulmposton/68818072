@model Bettery.WebRole.Models.Member

@{
    ViewBag.Title = "Edit";
}

<h2>WELCOME TO BETTERY</h2>
Create a membership account to enjoy the benefits of a BETTERY member; get access to great offers, get free replacement cases, track your savings and more.

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Member</legend>

        @Html.HiddenFor(model => model.MemberID)

        @Html.HiddenFor(model => model.CustomerProfileID)


        <div class="editor-label">
            @Html.LabelFor(model => model.FirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Zipcode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Zipcode)
            @Html.ValidationMessageFor(model => model.Zipcode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EmailAddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EmailAddress)
            @Html.ValidationMessageFor(model => model.EmailAddress)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RegConfirmPassword)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.RegConfirmPassword)
            @Html.ValidationMessageFor(model => model.RegConfirmPassword)
        </div>
        <div class="editor-label">
            @Html.CheckBoxFor(model => model.EmailOptIn)
            Receive emails about BETTERY news and special offers 
            <br />
        </div>
        <div class="editor-label">
            @Html.CheckBoxFor(model => model.AcceptTerms)
            I Accept BETTERY @Html.ActionLink("Terms and Conditions", "Terms", "Account")
            <br />@Html.ValidationMessageFor(model => model.AcceptTerms)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}


